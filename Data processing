### CОЗДАНИЕ ПУСТОГО DATA FRAME ###

a <- data.frame(Name = rep(NA, 10), Sex = rep(NA, 10), Age = rep(NA, 10))

typeof(my_data) # list
my_data$new_column <- rep(NA, nrow(my_data)) # создаёт новый пустой столбец
my_data$new_column <- NULL # удалить столбец(цы)
my_data_2 <- my_data[c(1:6),1:2] # создать датафрейм с помощью данных из другого df

### ОБРАЩЕНИЕ К ЭЛЕМЕНТАМ df ###

my_data$Цена # обращение к столбцу "Цена"
my_data$Цена[] # обращение к элементам столбца "Цена"
my_data[x,y] # обращение к строке x и столбцу y
my_data[,1:3] # обращение ко всем строкам первых 3 столбцов
my_data[c(2,104,301),2] # возвращает 2, 104 и 301 строки 2-го столбца
my_data[-c(1,6,10),1:3] # возвращает все значения 3 столбцов, кроме 1,6,10
my_data[my_data$Категория == 'Овощи',1:3] # возвращает 1-3 столбцы таблицы my_data для категории 'Овощи'
subset(my_data, Цена >= 110) # возвращает все значения таблицы my_data, для которой цена >= 100
subset(my_data, Цена >= 110 & Категория == 'Овощи') # можно также сочетать с логическими операторами
subset(my_data, Цена >= 110 & Категория == 'Овощи', select = c(Дата, Цена))
my_data$gender == 'female' # возвращает вектор логических значений для столбца гендер, где TRUE – значение, соответствующее female, а FALSE – не соответствующее female

### ОБЪЕДИНЕНИЕ СТРОК И СТОЛБЦОВ ###
'''
rbind(x1,x2) # объединение строк df x1 и x2. Соединение по строкам требует, чтоб ширина столбцов и названия переменных совпадали
cbind(y1,y2) # объединение столбцов df y1 и y2 
'''

mydata1 <- subset(my_data, gender == 'female')
mydata2 <- subset(my_data, gender == 'male')
full_mydata <- rbind(mydata1,mydata2)  

mydata3 <- my_data[,1:7]
mydata4 <- my_data[,8:24]
full_mydata1 <- cbind(mydata3, mydata4)  

### РАБОТА С ДАТАСЕТАМИ ###

data(mtcars) # добавляет датасет в рабочую среду. 
help(mtcars) выведет информацию о датасете.
my_data <- mtcars запишет датасет в новую переменную.

# ЗАПОЛНЕНИЕ ДАННЫХ ТАБЛИЦЫ ЧЕРЕЗ ЛОГИЧЕСКИЕ ФУНКЦИИ
mtcars$new_var <- rep(NA, nrow(mtcars)) # создаём пустой столбец 
for (i in 1:nrow(mtcars)) {
  if (mtcars$carb[i] >= 4 | mtcars$cyl[i] > 6) {
    mtcars$new_var[i] <- 1
  } else mtcars$new_var[i] <- 0
}

